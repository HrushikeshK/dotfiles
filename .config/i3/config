# Mode to move a container to different workspace
set $mode_move_to_workspace "moveto_ws"
mode $mode_move_to_workspace {
    bindsym 1 move container to workspace $workspace1; mode "default"
    bindsym 2 move container to workspace $workspace2; mode "default"
    bindsym 3 move container to workspace $workspace3; mode "default"
    bindsym 4 move container to workspace $workspace4; mode "default"
    bindsym 5 move container to workspace $workspace5; mode "default"
    bindsym 6 move container to workspace $workspace6; mode "default"
    bindsym 7 move container to workspace $workspace7; mode "default"
    bindsym 8 move container to workspace $workspace8; mode "default"
    bindsym 9 move container to workspace $workspace9; mode "default"
}
bindsym $mod+shift+w mode $mode_move_to_workspace
