[module/checkupdates]
type = custom/script
exec = checkupdates | wc -l
interval = 90
label =  %output%
format-underline = #028731

[module/custom-date]
type = custom/script
exec = date '+%d/%m/%y'
interval = 300
label =  %output%
click-left = gsimplecal

[module/custom-time]
type = custom/script
exec = date '+%H:%M'
interval = 30
label =  %output%

[module/brightness]
type = custom/script
exec = ~/.dotfiles/scripts/i3blocks/brightness
label =  %output%
scroll-up = light -A 5
scroll-down = light -U 5
interval = 1

[module/screen-lock]
type = custom/script
exec = echo ""
click-left = ~/.dotfiles/.config/i3/i3lock-multimonitor/lock

[module/custom-volume]
type = custom/script
exec = ~/.dotfiles/scripts/i3blocks/volume
click-left = pavucontrol
click-right = ~/.dotfiles/scripts/i3blocks/volume 3
scroll-up = ~/.dotfiles/scripts/i3blocks/volume 4
scroll-down = ~/.dotfiles/scripts/i3blocks/volume 5
interval = 1
format-underline = #7700ef

